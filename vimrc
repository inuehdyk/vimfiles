if &compatible
    set nocompatible
endif

set encoding=utf-8

set fileencodings=iso-2022-jp,cp932,sjis,euc-jp,utf-8
set fileformats=unix,dos
syntax enable

filetype plugin indent on

set undofile
set hlsearch

set showmatch

syntax on

set wrap

set ruler
set nonumber
set shiftwidth=4
set tabstop=4
set smartindent
set autoindent

colorscheme torte
